<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dailydiscover.mapper.TopicMapper">
    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.dailydiscover.model.Topic">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="heat" property="heat" />
        <result column="trend" property="trend" />
        <result column="icon" property="icon" />
        <result column="description" property="description" />
        <result column="is_active" property="isActive" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <association property="relatedProduct" javaType="com.dailydiscover.model.Product">
            <id column="related_product_id" property="id" />
        </association>
    </resultMap>
    
    <!-- 查询语句可以保留在接口中的注解中，这里提供一个示例 -->
    <select id="findAllTopics" resultMap="BaseResultMap">
        SELECT * FROM topics
    </select>
</mapper>